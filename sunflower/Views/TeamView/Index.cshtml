@model IEnumerable<BusinessLayerLibrary.TeamView>

@{
    ViewBag.Title = "TeamView Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>TeamView Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ViewID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ViewDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TeamID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeamDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ViewID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ViewDescription)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
